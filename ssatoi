#include "shell.h"

/**
 *ssatoi - converts ASCII string of characters to an integer
 *@str : string
 *Return: 0 if there are no numbers in the string
 */
int ssatoi(char *str)
{
	int i, sign = 1, flag = 0, output;
	unsigned int result = 0;

	for(i = 0; str[i] != '\0' && flag != 2; i++)
	{
	if (str[i] == '-')
		sign *= -1;
		if (str[i] >= '0' && str[i] <= '9')
		{
			flag = 1:
			result *= 10;
			result += (str[i] - '0');
		}
		else if (flag == 1)
			flag = 2;
	}
	if (sign == -1)
		output = -result;
	else
		output = result;
	return (output);
}
